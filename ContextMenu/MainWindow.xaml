                                Content="Создать меню"
                                Height="50"
                                Grid.Row="1"
                                Grid.Column="2"
                                >
                        </Button>

                        <Button Style="{StaticResource StyleButton}"
                                Command="{Binding OpenInRegedit}"
                                Content="Reg."
                                Height="50"
                                Width="50"
                                Grid.Row="1"
                                Grid.Column="0"
                                >
                        </Button>

                    </Grid>

                    <!--Грид который скрывает грид области параметров ключа-->
                    <Grid Grid.Row="4"
                          Background="White"
                          Panel.ZIndex="1">

                        <Border BorderBrush="Black"
                                BorderThickness="2"
                                CornerRadius="10">

                            <TextBlock VerticalAlignment="Center"
                                       HorizontalAlignment="Center"
                                       Style="{StaticResource StyleTextBlockNameParam}"
                                       TextAlignment="Center">
                                
                                    Выберите ключ в левой панели,<LineBreak/>
                                    что бы редактировать его параметры.

                            </TextBlock>

                        </Border>

                        <Grid.Style>
                            <Style TargetType="{x:Type Grid}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding VisibleParamsKey}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding VisibleParamsKey}" Value="False">
                                        <Setter Property="Visibility" Value="Hidden"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Grid.Style>

                    </Grid>

                    <!--Область параметров ключа-->
                    <Grid DataContext="{Binding SelectedKey}" Grid.Row="4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="10"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="10"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>


                        <!--++++++++ RegistryName ++++++++-->
                        <TextBlock Style="{StaticResource StyleTextBlockNameParam}"
                                   Grid.Column="0" Grid.Row="0"
                                   Text="Имя в реестре"/>
                        <TextBox Style="{StaticResource StyleTextBoxParam}"
                                 Text="{Binding Path=RegistryName, UpdateSourceTrigger=PropertyChanged}"
                                 Grid.Column="2" Grid.Row="0" x:Name="TB1"/>


                        <!--++++++++ MUIVerb ++++++++-->
                        <TextBlock Style="{StaticResource StyleTextBlockNameParam}"
                                   Grid.Column="0" Grid.Row="2"
                                   Text="Видимое имя"/>
                        <TextBox Style="{StaticResource StyleTextBoxParam}"
                                 Text="{Binding Path=MUIVerb, UpdateSourceTrigger=PropertyChanged}"
                                 Grid.Column="2" Grid.Row="2" x:Name="TB2"/>


                        <!--++++++++ Command ++++++++-->
                        <TextBlock Style="{StaticResource StyleTextBlockNameParam}"
                                   Grid.Column="0" Grid.Row="4"
                                   Text="Команда"/>
                        <TextBox 
                                 Text="{Binding Path=Command, UpdateSourceTrigger=PropertyChanged}"
                                 x:Name="TB3"
                                 Grid.Column="2" Grid.Row="4">

                            <TextBox.Style>
                                <Style TargetType="{x:Type TextBox}">
                                    <Setter Property="BorderThickness" Value="0 0 0 1"/>
                                    <Setter Property="BorderBrush" Value="Black"/>
                                    <Setter Property="FontSize" Value="18"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding CanCommand}" Value="True">
                                            <Setter Property="IsEnabled" Value="True"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding CanCommand}" Value="False">
                                            <Setter Property="IsEnabled" Value="False"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBox.Style>

                        </TextBox>


                        <!--++++++++ Position ++++++++-->
                        <TextBlock Style="{StaticResource StyleTextBlockNameParam}"
                                   Grid.Column="0" Grid.Row="6"
                                   Text="Позиция"/>
                        <StackPanel Grid.Column="2" Grid.Row="6">
                            <RadioButton Content="Top" 
                                         GroupName="Radio_1"
                                         IsChecked="{Binding Path=Position, Converter={StaticResource RadioButtonBoolConverter}, ConverterParameter=1}">

                            </RadioButton>
                            <RadioButton Content="Middle (default)"
                                         GroupName="Radio_1"
                                         IsChecked="{Binding Path=Position, Converter={StaticResource RadioButtonBoolConverter}, ConverterParameter=-1}">

                            </RadioButton>
                            <RadioButton Content="Bottom"
                                         GroupName="Radio_1"
                                         IsChecked="{Binding Path=Position, Converter={StaticResource RadioButtonBoolConverter}, ConverterParameter=0}">

                            </RadioButton>
                        </StackPanel>


                        <!--++++++++ Extended ++++++++-->
                        <TextBlock Style="{StaticResource StyleTextBlockNameParam}"
                                   Grid.Column="0" Grid.Row="8"
                                   Text="Shift"/>
                        <CheckBox IsChecked="{Binding Path=Extended}" 
                                  Grid.Column="2" Grid.Row="8">

                        </CheckBox>


                    </Grid>

                </Grid>
                
            </Grid>
        </ScrollViewer>

    </Grid>
</Window>
